/**index.wxss**/
.header {
    margin: 90rpx 0 90rpx 50rpx;
    border-bottom: 1px solid #ccc;
    text-align: center;
    width: 650rpx;
    height: 300rpx;
    line-height: 450rpx;
}
 
.header image {
    width: 200rpx;
    height: 200rpx;
}
 
.content {
    margin-left: 50rpx;
    margin-bottom: 90rpx;
}
 
.content text {
    display: block;
    color: #9d9d9d;
    margin-top: 40rpx;
}
 
.bottom {
    border-radius: 80rpx;
    margin: 70rpx 50rpx;
    font-size: 35rpx;
}





.swiper {
  height: 300rpx;
  width: 100%;
}

.swiper image {
  height: 100%;
  width: 100%;
}

.subjectImg {
  width: 240rpx;
  height: 80rpx;
  position: relative;
  display: flex;
  margin-top: 20rpx;
}

.subjectImg image {
  width: 100%;
  height: 100%;
}

.subjectText {
  font-size: 32rpx;
  position: absolute;
  top: 28rpx;
  left: 75rpx;
  letter-spacing: 4rpx;
  color:rgb(60, 155, 56);
}

.Grade_select {
  display: flex;
  flex-direction: column;
  width: 80%;
  height: 700rpx;
  margin: 30rpx auto;
  justify-content: space-around;
}

.One_Two {
  width: 100%;
  display: flex;
  justify-content: space-between;
}

.one {
  width: 200rpx;
  height: 100%;

}

.Grade_img {
  width: 40px;
  height: 40px;
  align-content: center;
  margin:0 auto;
}
.Grade_text {
  width:140rpx;
  height: 60rpx;
  border: 0.5px solid deepskyblue;
  font-size: 14px;
  text-align: center;
  border-radius: 10px;
   margin:20rpx auto;
   line-height: 60rpx;
   box-shadow: 0 0 3px 3px rgb(212, 225, 231);
   background-color: rgb(107, 220, 228);
}
