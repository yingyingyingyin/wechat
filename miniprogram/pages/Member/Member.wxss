/* miniprogram/pages/Member/Member.wxss */
.header {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.avatar {
  width: 150rpx;
  height: 150rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.nickname {
  color: red;
  display: flex;
  letter-spacing: 3px;
}

.Wicon image {
  width: 40rpx;
  height: 40rpx;
  margin-left: 5px;
}

.member_content{
  width:90%;
  height: 100%;
  border: 0.3px solid rgb(240, 236, 12);
  border-radius: 10px;
  box-shadow: 0 0 3px 3px gainsboro;
  margin:30px auto;
  padding:10px 10px 50px 10px;
  font-size: 14px;
  display: flex;
  flex-direction: column;
}
.member_content text{
  font-size: 18px;
}
.member_content span{
  margin-top:20px;
}

